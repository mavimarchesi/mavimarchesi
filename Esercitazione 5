#ESERCIZIO3
def ComputeStdDev(Ls):
    S,N=ReduceR(lamba x,y: (x+y[0], 1+y[1], Ls, (0,0)))
    mu=S/N
    t=ReduceR(lambda x,y:y*(x-mu)**2, Ls, 0)
    'mu è la media, t è la funzione'
    return sqrt(t/N)
